#!/bin/bash

usage() { 
  echo "$(basename $0) <cluster>"
}

if (( $# == 0 )); then
  usage
else 
  cd $CHEF/org/chef-services/56m
  case "$1" in
    "sports")
      CLUSTER="sports"
      ;;
    "news")
      CLUSTER="data"
      ;;
    "ent")
      CLUSTER="ent"
      ;;
  esac
  knife ssh "name:elastic-$CLUSTER*" "df -h | awk 'NR==2 { print }' "
  cd - > /dev/null 2>&1
fi
